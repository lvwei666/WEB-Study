.item
  position relative

.main-block
  display flex
  align-items center
  padding 12px 14px 12px 0
  border-bottom 0.5px solid #e6e6e6

.content-wrapper
  padding-left 10px
  text-align left
  width 57vw

.movie-title
  max-height 24px
  margin-bottom 7px
  line-height 24px
  overflow hidden
  font-size 17px
  color #333
  font-weight 700
  text-overflow ellipsis
  overflow hidden
  white-space nowrap

.score, .actor, .show-info
  font-size 13px
  color #666
  text-overflow ellipsis
  overflow hidden
  white-space nowrap

.grade
  font-weight 700
  color #faaf00
  font-size 15px

.person
  color #faaf00
  font-size 15px
  font-weight 600

.p-suffix
  font-size 13px
  display inline-block
  color #666
  font-weight normal

.button
  width 47px
  height 27px
  line-height 28px
  box-sizing border-box
  background-color #f03d37
  color #fff
  border-radius 4px
  white-space nowrap
  font-size 12px
  cursor pointer
  position absolute
  right 15px
  text-align center

.btn
  background-color #3c9fe6

.fix
  color #fff
