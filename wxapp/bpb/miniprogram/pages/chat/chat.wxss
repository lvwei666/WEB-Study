/* miniprogram/pages/chat/chat.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #47B5C4;
}
.container{
    width: 100%;
    height: 100%;
    padding-top: 5rpx;
}
.header{
    width: 100%;
    position: relative;
    background-color: #ffffff;
   margin-bottom:15rpx;
}
.title{
  padding-left: 40rpx;
  padding-top: 35rpx;
}
.more{
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    font-size: 13px;
    color: #aaaaaa;
}
.content{
    width: 100%;
    display: flex;
    padding: 15rpx 0 10rpx 0;
}
.con-left{
    flex: 1;
    padding-left: 40rpx;
}
.con-right{
    flex: 1;
}
.con-item{
    width: 300rpx;
    margin:10rpx 0;
}
.con-item .topic{
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
    display: inline-block;
}
.con-item .img{
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
}
.hobby{
    display: inline-block;
    width: 60%;
    margin-left:25rpx;
}
.hobby-title{
    font-size: 14px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.hobby-active{
    font-size: 11px;
    color: red;
}
.add{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    position: fixed;
    bottom:150rpx;
    right:50rpx;
}
.add .add-btn{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.footer{
  text-align: center;
  font-size: 14px;
  color: red;
}