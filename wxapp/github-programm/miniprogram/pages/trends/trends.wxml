<view class="trends">
  <trend repo="{{ item }}" wx:for="{{ trends }}" 
  wx:key="{{ index }}">
  </trend>
  <picker class="lang-picker" value="{{selectedIndices}}" mode="multiSelector" bindchange="changeFilter" range="{{selectorValues}}" range-key="label">
    <button type="primary" size="mini">{{since.label}} / {{lang.label}}</button>
  </picker>
</view>