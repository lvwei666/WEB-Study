<view class="news-wrapper">
    <view class="news-wrapper-up" bindtap="goInner">
        <view class="news-title">
            <text>{{title}}</text>
        </view>
    </view>
    <view class="news-tag">
        <text decode="true">{{isOld ? '更新' : '创建'}}时间：</text>
        <text>{{time}}</text>
        <view class="news-tag-focus">
            <icon class="wode" type="wode" size="28" color="#b1b1b1"></icon>
            <span class="focus_num">{{focusNum}}</span>
        </view>
    </view>
    <image class="img" mode="aspectFill" src="{{imgUrl}}"></image>
</view>