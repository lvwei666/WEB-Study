$font_color_white = #fff
html,body
  width 100%
.flex
  display flex
.flex1
  flex 1
.section-til
  font-size 17px
  color #000000
.action-list.section-til
  padding-left 0.4rem
.nav
  height 1.067rem
  font-size 18px
  text-align center
  background-color #1e2025
  padding 6px
  box-sizing border-box
  .arrow-left
    float left
    height 100%
    position relative
    &:after
      content ''
      width 12px
      height 12px
      position absolute
      top 50%
      left 16px
      border 2px solid #fff
      border-width 0 0 2px 2px
      box-sizing border-box
      transform rotate(45deg) translateY(-50%)
  span
    color $font_color_white
    display inline-block
.page
  background-color #f4f4f4
  position relative
  z-index 1
  margin 0
  color #555
  min-width 3.1rem
  -webkit-user-select none
  -webkit-tap-highlight-color rgba(255,255,255,0)
  font 14px/1.5 Arial, Helvetica, sans-serif
  section
    background-color #fff
    border-bottom 1px solid #e5e5e5
  .movie-header
    padding 0
    background #f8f8f8
    border-bottom none
    .movie
      color $font_color_white
      padding 0.4rem
      line-height 1
      overflow hidden
      position relative
      box-sizing border-box
      filter blur(0)
      .movie-background,
      .movie-filter
        position absolute
        top 0
        right 0
        bottom 0
        left 0
      .movie-background
        z-index 0
        filter blur(.6rem)
        background-image url(./images/header-bg.jpg)
        background-size cover
        background-repeat no-repeat
        background-position-y 40%
      .movie-filter
        background-color #40454d
        opacity .55
      .movie-container
        overflow hidden
        position relative
        z-index 1
        .movie-cover
          float left
          width 2.854rem
          height 4rem
          border 1px solid #f0f2f3
          position relative
          .link
            cursor pointer
            display block
            width 100%
            height 100%
            .img
              width 100%
          &:after
            content ''
            width 0.667rem
            height 0.667rem
            border-radius 100%
            background-image url(./images/bofang.png)
            background-size 100% auto
            position absolute
            right 0.1rem
            bottom 0.1rem
            opacity 0.7

        .movie-content
          overflow hidden
          padding-left 0.4rem
          .movie-name
            font-size 17px
            margin 0.08rem 0
          .movie-ename
            font-size 12px
            margin-bottom 0.3rem
          .movie-score
            font-size 12px
            margin-bottom 0.3rem
            .rating
              .img
                width 0.48rem
                height 0.48rem
                margin-right 2px
              .rating-score
                font-size .48rem
                color #ffc600
          .movie-detail
            font-size 12px
            margin-bottom 0.16rem
            opacity 0.7
            p
              margin-bottom 0.14rem
      .operating
          margin-top 0.5rem
          div
            border 1px solid rgba(255,255,255,.4)
            background-color rgba(255,255,255,.4)
            font-size 14px
            color $font_color_white
            position relative
            z-index 2
            text-align center
            padding 0.25rem 0
            border-radius 4px
            img 
              vertical-align middle
            span
              vertical-align middle
          .movie-watch
              margin-right 0.3rem
              img 
                width 14px
                height 14px
          .movie-mark
              img 
                width 18px
                height 18px
  #toast
    display none

  .section-seperate
    padding-top 0.4rem
    margin-bottom 0.3rem
    border-top 1px solid #e5e5e5
  .section-expander
    padding-left 0.4rem
    padding-right 0.4rem
    .text-expander
      .text-expander_content.close
        min-height 65px
        display -webkit-box
        overflow hidden
        text-overflow ellipsis
        word-break break-all
        -webkit-box-orient vertical
        -webkit-line-clamp 3
      .text-expander_button
        height 0.7rem
        text-align center
        .icon-chevron_down
          width 10px
          height 10px
          border 1px solid #aaaaaa
          display inline-block
          border-width 0 1px  1px 0
          box-sizing border-box
          transform rotateZ(45deg)
          transition transform 1s
        .icon-chevron_down.up
          transform rotateZ(-135deg)
  .section-seperate
    .movie-celebrities
      width 100%
      padding 0.3rem 0.3rem 0.1rem 0.3rem
      white-space nowrap
      overflow-x scroll
      box-sizing border-box
      li
        text-align center
        display inline-block
        padding 0.04rem
        .link
          color #000000
          .movie-celebrities_pic
            width 1.7334rem
            height 2.4rem
            margin 0.05rem
            img 
              width 100%
          span
            display block
            font-size 0.2rem
            text-overflow ellipsis
            overflow hidden
            white-space nowrap
          .movie-celebrities_roles
            color #999999
  .movie-booking
    padding-bottom 0.2rem
    .weui-flex
      text-align center
      .placeholder
        span
          font-size 24px
          color #d96a3d
        p
          color #bababa
          margin-top 0.1rem
  .movie-photo
    .movie-photo_lists
      width 100%
      padding 0.3rem 0.3rem 0.2rem
      overflow-x scroll
      white-space nowrap
      box-sizing border-box
      .stage-img-container
        margin-right 0.13333rem
        display inline-block
        width 2.4rem
        height 1.867rem
        .movie-celebrities_pic
          width 100%
          height 100%
          img 
            width 100%
            height 100%
        &:first-child
          width 3.3334rem
          height 1.867rem
          position relative
          &:after
            content ''
            width 0.667rem
            height 0.667rem
            border-radius 100%
            background-image url(./images/bofang.png)
            background-size 100% auto
            position absolute
            right 0.1rem
            bottom 0.1rem
            opacity 0.7
        &:last-child
          margin-right 0
  .pos_r
    position relative
    .join-commit
      position absolute
      font-size 14px
      background-color #e54847
      color $font_color_white
      padding 0.1rem 0.3rem
      border-radius 20px
      top 50%
      right 0
      transform translateY(-50%)
  .movie-commit
    padding 0.2rem 0 0.4rem 0
    overflow hidden
    .commit-item
      float left
      border 1px solid #aaaaaa
      border-radius 20px
      padding 0.1rem 0.25rem
      margin-top 0.2rem
      margin-right 0.3rem
  .section-til
    margin-top .23rem
    margin-bottom .08rem
    font-size .28rem
    font-weight 700
    color #666
    margin-left .3rem
    text-align left
  .chosen-comment
    .chosen-comment__item
      .item-avatal
        float left
        width 1rem
        height 1rem
        border-radius 50%
        overflow hidden
        img
          width 100%
      .item-detail
        overflow hidden
        padding-left .3rem
        padding-bottom 0.4rem
        border-bottom 1px solid #eee
        margin-bottom 0.4rem
        .item-detail__hd
          div
            span
              vertical-align middle
          .lever
            display inline-block
            width .9735rem
            height 0.4534rem
            img
              width 100%
          .item-score__desc
            color #9b9b9b
            font-size 12px
        .item-detail__content
          margin .15rem 0
        .item-detail__footer
          margin-top .4rem
          .item-detail__time
            color #9b9b9b
          .pull-right
            float right
            .link
              color #757575
              border 1px solid #eee
              margin-left 0.3rem
              padding .12rem 0.3rem .16rem
              box-sizing border-box
              border-radius 20px
              .icon
                display inline-block
                width 15px
                height 15px
                vertical-align middle
              span
                vertical-align middle